<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="#ffff2726">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editText"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:selectAllOnFocus="true"
        android:inputType="text"
        android:editable="true"
        android:textColor="#ff030303"
        android:clickable="false"
        android:textIsSelectable="true" />


    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Bold"
        android:id="@+id/radioButton"
        android:textColor="#ff000000"
        android:singleLine="false"
        android:layout_below="@+id/editText"
        android:layout_alignParentStart="true"
        android:layout_marginTop="46dp"
        android:nestedScrollingEnabled="false"
        android:onClick="RadioOnClick1" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Italic"
        android:id="@+id/radioButton2"
        android:layout_below="@+id/radioButton"
        android:layout_alignParentStart="true"
        android:onClick="RadioOnClick2" />

    <Spinner
        android:id="@+id/Spinner"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/radioButton2"
        android:layout_alignParentEnd="true"
        android:theme="@style/Base.TextAppearance.AppCompat.Display1"
        android:transitionGroup="true"
        android:background="#ffff2726"
        android:popupBackground="#ffff2726"
        android:dropDownSelector="#ffff2726" />

    <Spinner
        android:id="@+id/Spinner2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:entries="@array/rainbow"
        android:layout_below="@+id/Spinner"
        android:popupBackground="#ffff2726"
        android:layout_alignParentStart="true"
        android:background="#ffff2726"
        android:dropDownSelector="#ffff2726" />

    <Spinner
        android:id="@+id/Spinner3"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Spinner2"
        android:layout_alignParentStart="true"
        android:popupBackground="#ffff2726"
        android:background="#ffff2726"
        android:dropDownSelector="#ffff2726" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/APPLY"
        android:id="@+id/button"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        style="@android:style/TextAppearance.Medium.Inverse"
        android:onClick="Message"
        android:background="#ff000000" />

</RelativeLayout>
